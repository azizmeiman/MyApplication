<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpRegistaration">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ICONEmpReg"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:adjustViewBounds="false"
            android:src="@drawable/logop" />

        <EditText
            android:id="@+id/OrgNameEmp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Organization Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/UserNameEmp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/EmailEmp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/MPhoneEmp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:ems="10"
            android:hint="+966"
            android:inputType="number" />

        <EditText
            android:id="@+id/PasswordEmp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/CityEmp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/LocationEmp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:ems="10"
            android:hint="Google map location"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/IDEmp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/BioEmp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:ems="10"
            android:hint="Bio"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/EmpRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="REGISTER"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" />

        <TextView
            android:id="@+id/SignInViewEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in have Account?"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    </LinearLayout>
</RelativeLayout>