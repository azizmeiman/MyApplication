<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMain"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <ImageButton
                    android:id="@+id/ViewEmplyer"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/emp2" />


                <ImageButton
                    android:id="@+id/ViewWorkerPoster"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="30dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.92"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.194"
                    app:srcCompat="@drawable/wp2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewWPText"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:text="عرض الباحثين عن عمال"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewEmpText"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:text="عرض عارضين العمال"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />




            </LinearLayout>

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="120dp">

        <ImageButton
            android:id="@+id/reports"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/reports" />


        <ImageButton
            android:id="@+id/ViewAllContract"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.194"
            app:srcCompat="@drawable/contract2" />


    </LinearLayout>

       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

           <TextView
               android:id="@+id/viewReportText"
               android:layout_width="170dp"
               android:layout_height="match_parent"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="8dp"
               android:text="عرض التقارير"
               android:textAlignment="center"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/viewContractText"
               android:layout_width="170dp"
               android:layout_height="match_parent"
               android:layout_marginStart="30dp"
               android:text="عرض العقود"
               android:textAlignment="center"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18sp"
               android:textStyle="bold" />




       </LinearLayout>

</LinearLayout>

    </LinearLayout>


</RelativeLayout>