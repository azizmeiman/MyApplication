<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workerposterreports">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/workerpostertoprate"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gooduser" />

            <ImageButton
                android:id="@+id/workerposterbadrate"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/notgooduser" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="العمال الافضل تقييماً"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="العمال الاسواء تقييماً"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/workerpostehighesticome"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/highuserincome" />

            <ImageButton
                android:id="@+id/workerposterlowesticome"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/lowincomeuser" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:text="العمال الاعلى دخلاًً"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="العمال الاقل دخلاًً"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/systemfees"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnshapecolor"
            android:text="مطالبات التطبيق"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" />

    </LinearLayout>

</RelativeLayout>