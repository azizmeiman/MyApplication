<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addworker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="509dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="370dp"
            android:layout_height="78dp"
            app:srcCompat="@drawable/logop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/WorkerNameedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="اسم العامل"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/WorkerIDedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="رقم الهوية او الاقامة"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/WorkerMobileedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="رقم الجوال"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/WorkerNationalityedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="الجنسية"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/WorkerCityedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="المدينة"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/WorkerBDateedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="تاريخ الميلاد"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/WorkerSkillsedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="المهن"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/WorkerFeesedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="الاجرة باليوم"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/WorkerIncomeedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="مجموع الدخل"
                    android:inputType="textPersonName" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/editworkerBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="6dp"
        android:background="@color/colorPrimary"
        android:text="إضافة"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

</RelativeLayout>